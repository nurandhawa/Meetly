<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.churro.meetly.EventCreator">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/titleInput"
        android:layout_marginRight="189dp"
        android:layout_marginEnd="189dp"/>

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startDatePicker"
        android:layout_below="@+id/titleInput"
        android:calendarViewShown="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startDatePicker"

        android:id="@+id/startTimePicker"
        />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endDatePicker"
        android:layout_below="@id/startTimePicker"
        android:layout_alignParentLeft="true"
        android:calendarViewShown="false"
        android:layout_alignParentStart="true"/>
    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/endDatePicker"
        android:id="@+id/endTimePicker"
        />

</RelativeLayout>